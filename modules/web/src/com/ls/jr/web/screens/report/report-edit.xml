<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.ls.jr.web.screens.report">
    <data>
        <instance id="reportDc"
                  class="com.ls.jr.entity.Report"
                  view="report-view">
            <loader/>
        </instance>
        <collection id="categoriasDc" class="com.ls.jr.entity.Categoria" view="_minimal">
            <loader id="categoriasLc">
                <query>
                    <![CDATA[select e from jr_Categoria e]]>
                </query>
            </loader>
        </collection>
        <collection id="filesDc" class="com.haulmont.cuba.core.entity.FileDescriptor" view="_minimal">
            <loader id="filesLc">
                <query>
                    <![CDATA[select e from sys$FileDescriptor e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="reportDc">
            <column width="250px">
                <textField id="nomeField" property="nome"/>
                <lookupPickerField id="categoriaField" optionsContainer="categoriasDc" property="categoria"/>
                <lookupField id="tipoField" property="tipo"/>
                <upload id="fileField" fileStoragePutMode="IMMEDIATE" property="file"
                        showFileName="true"/>
                <dateField id="validoDaField" property="validoDa"/>
                <dateField id="validoFinoField" property="validoFino"/>
                <textField id="storeField" property="store"/>
                <textField id="paramsField" property="params"/>
            </column>
            <column>
                <textField id="aliasField" property="alias"/>
                <button/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
